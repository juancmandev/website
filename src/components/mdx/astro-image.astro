---
import { Image } from "astro:assets";

const { src, alt } = Astro.props;
---

<Image
  id="img"
  src={src}
  alt={alt}
  width={1092}
  height={986}
  class=".markdown-image w-auto h-auto rounded-md aspect-auto"
/>

<script>
  const image = document.getElementById("img")!;

  image && image.setAttribute("loading", "eager");
</script>
